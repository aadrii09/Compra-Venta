{% extends 'base.html.twig' %}

{% block title %}Hello ComercialController!{% endblock %}

{% block body %}
<div class="container mt-4">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nombre Comercial</th>
                <th>Fecha</th>
                <th>FechaVenta</th>
                <th>Vendido</th>
                <th>Precio_Oferta</th>
                <th>Precio_Final</th>
            </tr>
        </thead> 
        <tbody>
            {% for comercial in listaComercial %}
                <tr>
                    <td>{{ comercial.nombre }}</td>
                    <td>{{ comercial.fecha|date('Y-m-d') }}</td>
                    <td>{{ comercial.fechaVenta|date('Y-m-d') }}</td>
                    <td>{{ comercial.vendido ? 'Sí' : 'No' }}</td>
                    <td>{{ comercial.precioOferta }}</td>
                    <td>{{ comercial.precioFinal }}</td>
                    <td>
                     <!-- Botón para detalle -->
                        <a href="{{ path('detalle_comercial', {'id': comercial.id}) }}" class="btn btn-info btn-sm">
                            <i class="bi bi-pencil"></i> Detalle
                        </a>
                         <!-- Botón para editar -->
                         {% if not comercial.vendido %}
                        <a href="{{ path('editar_comercial', {'id': comercial.id}) }}" class="btn btn-info btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <!-- Botón "Crear" -->
    <button>
    <div class="text-start"> 
        <a href="{{path('crear_comercial')}}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear
        </a>
        </button>
    </div>
</div>
{% endblock %}
